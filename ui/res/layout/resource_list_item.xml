<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list.item.layout"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/resource_list_item_icon"
        style="@style/list.item.icon"
    />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/list.item.text.layout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/resource_list_item_label"
            style="@style/list.item.text.label"
        />

        <TextView
            android:id="@+id/resource_list_item_uri"
            style="@style/list.item.text.uri"
        />

    </LinearLayout>

</LinearLayout>