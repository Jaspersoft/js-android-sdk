<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/inputControl.layout"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ic_text_label"
        style="@style/inputControl.label"
    />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       style="@style/inputControl.date.inputContainer.layout"
       android:orientation="horizontal" >

        <EditText
            android:id="@+id/ic_date_text"
            style="@style/inputControl.date.inputContainer.editText"
            android:editable="false"
            android:focusable="false"
        />

        <ImageButton
            android:id="@+id/ic_date_picker_button"
            style="@style/inputControl.date.inputContainer.picker.date"
        />

        <ImageButton
            android:id="@+id/ic_time_picker_button"
            style="@style/inputControl.date.inputContainer.picker.time"
            android:visibility="gone"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/ic_error_text"
        style="@style/inputControl.errorText"
        android:visibility="gone"
    />

</LinearLayout>
